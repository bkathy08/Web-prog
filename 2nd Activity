<?php

$name=$_POST['name'] ;
$total=$_POST['total'] ;
$Daily=$_POST['Daily'] ;
$Cash=$_POST['Cash'] ;
$gross = $Daily * $total;
$tax =$gross*0.05;
$sss =$gross*0.02;
$phil = $gross *0.03;
$pag = 50;
$deduction = $Cash+ $tax + $sss + $phil + $pag;
$net = $gross - $deduction;



echo " Name of Employment : $name <br> <br>  
Daily Rate:$Daily <br> <br> Day of Work: $total";
echo "GrossPay : $gross <br> <br> Deduction of the Day ";
echo "Tax : $tax <br> <br> Tax of the Day $sss <br> <br>: $phil 
<br> <br> Cash in Advance: $Cash <br> <br> ";
echo "Total Deduction: $deduction <br> <br> Net Pay:$net <br> <br> ";




?>
